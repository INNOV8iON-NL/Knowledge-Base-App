<mvc:View
    xmlns:forms="sap.ui.layout.form"
    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit"
    xmlns:rte="sap.ui.richtexteditor"
    controllerName="articlesfreestyle.controller.Create"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:editor="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    width="100%"
    height="100%"
>
    <NavContainer id="wizardNavContainer">
        <pages>
            <Page
                showHeader="false"
                id="wizardCreatePage"
            >
                <content>
                    <Wizard
                        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                        complete="handleWizardSubmit"
                        id="newArticleWizard"
                    >
                        <WizardStep
                            id="TitleStep"
                            title="Create new article"
                            validated="false"
                        >
                            <VBox width="100%">
                                <forms:SimpleForm>
                                    <Label
                                        text="Title"
                                        class="sapUiTinyMarginTop"
                                    />
                                    <Input
                                        placeholder="Write the title of the article here"
                                        valueState="Error"
                                        value="{Title}"
                                        editable="true"
                                        id="articleTitleId"
                                        required="true"
                                        width="500px"
                                        change=".validateArticleWizard"
                                    />

                                    <Label
                                        text="Description"
                                        class="sapUiTinyMarginTop"
                                    />

                                    <TextArea
                                        required="true"
                                        value="{Description}"
                                        valueState="Error"
                                        rows="10"
                                        visible="true"
                                        editable="true"
                                        width="500px"
                                        maxLength="1000"
                                        showExceededText="true"
                                        placeholder="Please enter your description in 3-4 sentences here..."
                                        change=".validateArticleWizard"
                                        id="descriptionId"
                                    />

                                    <Label
                                        text="Category"
                                        class="sapUiTinyMarginTop"
                                    />
                                    <MultiInput
                                        suggestionItemSelected=".validateArticleWizard"
                                        change=".tokenChange"
                                        tokenUpdate=".validateArticleWizard"
                                        required="true"
                                        valueState="Error"
                                        id="multiInputId"
                                        width="500px"
                                        showValueHelp="false"
                                        placeholder="You can choose multiple categories. Enter values like Frontend, ABAP, etc.."
                                    >
                                        <core:Item
                                            key="{TagName}"
                                            text="{TagName}"
                                        />
                                    </MultiInput>
                                </forms:SimpleForm>
                            </VBox>
                        </WizardStep>

                        <WizardStep
                            id="ContentStep"
                            title="Write your article"
                            optional="true"
                        >
                            <rte:RichTextEditor
                                id="richtextEditorId"
                                class="richtextWarning"
                                editable="true"
                                height="600px"
                                editorType="TinyMCE6"
                                width="100%"
                                required="true"
                                customToolbar="false"
                                showGroupClipboard="true"
                                showGroupTextAlign="true"
                                showGroupStructure="true"
                                showGroupLink="true"
                                showGroupFont="true"
                                showGroupInsert="true"
                                value="{Content}"
                                tooltip="Create and format your content here"
                                change=".validateContentWizard"
                            />
                        </WizardStep>

                        <WizardStep
                            id="CodeStep"
                            title="Add code snippets"
                            optional="true"
                        >
                            <ComboBox
                                id="comboBoxId"
                                change=".selectChange"
                                placeholder="Choose programming language"
                                width="250px"
