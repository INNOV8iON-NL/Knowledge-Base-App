<mvc:View
    xmlns:forms="sap.ui.layout.form"
    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit"
    xmlns:rte="sap.ui.richtexteditor"
    controllerName="articlesfreestyle.controller.Create"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    xmlns:editor="sap.ui.codeeditor"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    width="100%"
    height="100%"
>
    <NavContainer id="wizardNavContainer">
        <pages>
            <Page
                showHeader="false"
                id="wizardCreatePage"
            >
                <content>
                    <Wizard
                        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                        complete="handleWizardSubmit"
                        id="newArticleWizard"
                    >
                        <WizardStep
                            id="TitleStep"
                            title="Create new article"
                            validated="false"
                        >
                            <VBox width="100%">
                                <forms:SimpleForm>
                                    <Label
                                        text="Title"
                                        class="sapUiTinyMarginTop"
                                    />
                                    <Input
                                        placeholder="Write the title of the article here"
                                        value="{Title}"
                                        editable="true"
                                        id="articleTitleId"
                                        required="true"
                                        width="500px"
                                        change=".validateArticleWizard"
                                    />

                                    <Label
                                        text="Description"
                                        class="sapUiTinyMarginTop"
                                    />

                                    <TextArea
                                        required="true"
                                        value="{Description}"
                                        rows="10"
                                        visible="true"
                                        editable="true"
                                        width="500px"
                                        maxLength="1000"
                                        showExceededText="true"
                                        placeholder="Please enter your description in 3-4 sentences here..."
                                        change=".validateArticleWizard"
                                        id="descriptionId"
                                    />

                                    <Label
                                        text="Category"
                                        class="sapUiTinyMarginTop"
                                    />
                                    <MultiInput
                                        suggestionItemSelected=".validateArticleWizard"
                                        change=".tokenChange"
                                        tokenUpdate=".validateArticleWizard"
                                        id="multiInputId"
                                        width="500px"
                                        showValueHelp="false"
                                        placeholder="You can choose multiple categories. Enter values like Frontend, ABAP, etc.."
                                        suggestionItems="{
				                            path: '/UniqueTags',
				                            sorter: { path: 'TagName' }
			                                            }"
                                        suggestionRows="{/TagName}"
                                    >
                                        <suggestionColumns>
                                            <Column
                                                hAlign="Begin"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                            >
                                                <Label text="Name" />
                                            </Column>
                                        </suggestionColumns>
                                        <suggestionRows>
                                            <ColumnListItem>
                                                <cells>
                                                    <Label text="{TagName}" />
                                                </cells>
                                            </ColumnListItem>
                                        </suggestionRows>
                                        <core:Item
                                            key="{TagName}"
                                            text="{TagName}"
                                        />
                                    </MultiInput>
                                </forms:SimpleForm>
                            </VBox>
                        </WizardStep>

                        <WizardStep
                            id="ContentStep"
                            title="Write your article"
                            validated="true"
                        >
                            <MessageStrip
                                class="sapUiSmallMarginTopBottom"
                                text="You can write and format your article content here. You can also add code snippets. Multiple text blocks and code snippets can be added in this step. "
                                showIcon="true"
                            />
                            <VBox id="wizardVBoxId" />

                            <HBox id="buttonContainerId" />
                        </WizardStep>
                    </Wizard>
                </content>
            </Page>
        </pages>
    </NavContainer>
</mvc:View>
