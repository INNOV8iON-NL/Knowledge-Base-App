<mvc:View
    xmlns:forms="sap.ui.layout.form"
    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:editor="sap.ui.codeeditor"
    controllerName="articlesfreestyle.controller.Articles"
    xmlns:rte="sap.ui.richtexteditor"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    height="100%"
    width="100%"
>
    <uxap:ObjectPageLayout
        id="ObjectPageLayout1"
        enableLazyLoading="true"
        useIconTabBar="true"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle areaShrinkRatio="1:5:5">
                <uxap:expandedHeading>
                    <Title
                        text="{Title}"
                        id="titleText"
                    />
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <Title text="{Title}" />
                </uxap:snappedHeading>

                <uxap:actions>
                    <Button
                        text="Edit"
                        type="Emphasized"
                        press=".onEdit"
                        visible="true"
                        id="editButton"
                    />
                    <Button
                        text="Save"
                        type="Emphasized"
                        press=".onSaveChanges"
                        visible="false"
                        id="saveButton"
                    />
                    <Button
                        text="Cancel"
                        type="Default"
                        press=".onCancel"
                        visible="false"
                        id="cancelButton"
                    />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <HeaderContainer>
                <VBox
                    class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                    width="300px"
                >
                    <HBox class="sapUiTinyMarginBottom">
                        <Label
                            text="Created by:"
                            class="sapUiSmallMarginEnd"
                        />
                        <Text text="{CreatedBy}" />
                    </HBox>

                    <HBox class="sapUiTinyMarginBottom">
                        <Label
                            text="Changed on:"
                            class="sapUiSmallMarginEnd"
                        />
                        <Text
                            text="{
                                path: 'LocalLastChangedAt',
                                type: 'sap.ui.model.type.DateTime',
                                formatOptions: {
                                    style: 'medium'
                                }
                                }"
                        />
                    </HBox>

                    <HBox
                        class="sapUiTinyMarginBottom"
                        alignItems="Center"
                        id="titleContainer"
                        visible="false"
                    >
                        <Label
                            text="New title:"
                            class="sapUiSmallMarginEnd"
                        />
                        <Input
                            value="{Title}"
                            width="250px"
                            editable="true"
                            id="titleValue"
                        />
                    </HBox>
                </VBox>

                <VBox
                    class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                    width="500px"
                >
                    <Title
                        text="Description"
                        class="sapUiTinyMarginBottom"
                    />
                    <Text
                        text="{Description}"
                        visible="true"
                        id="descText"
                    />
                    <TextArea
                        value="{Description}"
                        rows="10"
                        width="100%"
                        visible="false"
                        editable="true"
                        id="descValue"
                        maxLength="1000"
                        showExceededText="true"
                    />
                </VBox>
                <VBox>
                    <Title
                        text="Category"
                        class="sapUiTinyMarginBottom"
                    />
                    <List items="{to_tags}">
                        <DisplayListItem value="{TagName}" />
                    </List>
                </VBox>
            </HeaderContainer>
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Article"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <rte:RichTextEditor
                            id="richTextId"
                            class="sapUiSmallMarginTop mceContentBody"
                            editorType="TinyMCE6"
                            customToolbar="true"
                            showGroupClipboard="false"
                            showGroupTextAlign="false"
                            showGroupStructure="false"
                            showGroupLink="false"
                            showGroupFont="false"
                            showGroupFontStyle="false"
                            showGroupInsert="false"
                            editable="false"
                            height="500px"
                            width="100%"
                            value="{Content}"
                        />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                titleUppercase="false"
                title="Code"
            />

