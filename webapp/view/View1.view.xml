<mvc:View
    controllerName="articlesfreestyle.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <Page
        id="page"
        class="knowledgeBaseApp sapUiContentPadding"
    >
        <content>
            <smartFilterBar:SmartFilterBar
                id="smartFilterId"
                entitySet="Articles"
            >
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration
                        key="Title"
                        index="1"
                        visible="true"
                        filterType="searchExpression"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="Description"
                        visible="true"
                        index="2"
                        filterType="searchExpression"
                    />
                    <smartFilterBar:ControlConfiguration
                        key="CreatedBy"
                        visible="true"
                        index="3"
                        filterType="searchExpression"
                    />
                </smartFilterBar:controlConfiguration>

                <smartFilterBar:layoutData>
                    <FlexItemData shrinkFactor="0" />
                </smartFilterBar:layoutData>
            </smartFilterBar:SmartFilterBar>

            <smartTable:SmartTable
                id="smartTableId"
                entitySet="Articles"
                smartFilterId="smartFilterId"
                tableType="ResponsiveTable"
                useVariantManagement="true"
                useTablePersonalisation="true"
                header="Articles"
                showFullScreenButton="true"
                showRowCount="true"
                persistencyKey="SmartTableAnalytical_Explored"
                enableAutoBinding="true"
                class="sapUiContentPadding"
                initiallyVisibleFields="Title,LastChangedAt,CreatedBy,Description,Category"
                requestAtLeastFields="GuID"
            >
                <smartTable:customToolbar>
                    <OverflowToolbar design="Transparent">
                        <ToolbarSpacer />
                        <OverflowToolbarButton
                            icon="sap-icon://delete"
                            tooltip="Delete"
                            text="Delete"
                            press=".onDelete"
                            id="deleteId"
                            visible="false"
                        />
                        <OverflowToolbarButton
                            icon="sap-icon://create"
                            tooltip="Create new article"
                            text="Create"
                            press="onCreate"
                        />
                    </OverflowToolbar>
                </smartTable:customToolbar>
                <Table
                    id="innerTableId"
                    mode="MultiSelect"
                    selectionChange=".onSelectionChange"
                >
                    <columns>
                    <!-- <Column
                            id="Description"
                            hAlign="Begin"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "Description", "columnIndex": "70"}'
                                />
                            </customData>
                            <Text text="Description" />
                        </Column> -->
                        <Column
                            id="Category"
                            hAlign="Begin"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "Category", "columnIndex": "80"}'
                                />
                            </customData>
                            <Text text="Category" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            type="Navigation"
                            press=".onDetailPress"
                        >
                        <!-- <cells>
                           <Text text="{Description}" class="sapUiTinyMargin"></Text>
                        </cells> -->
                            <cells>                            
                                <List
                                    id="tagListId"
                                    items="{ path: 'to_tags', templateShareable : false }"
                                    width="100%"
                                >
                                    <DisplayListItem value="{TagName}" />
                                </List>
                            </cells>
                        </ColumnListItem>
                       
                    </items>
                </Table>
            </smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>